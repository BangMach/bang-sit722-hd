{
  "name": "ecommerce-frontend",
  "version": "1.0.0",
  "description": "Frontend for microservices e-commerce application",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "snyk:test": "snyk test",
    "snyk:monitor": "snyk monitor",
    "security:scan": "snyk test && snyk code test",
    "lint": "eslint .",
    "build": "echo 'Static files - no build needed'",
    "serve": "http-server -p 3000"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.4",
    "eslint": "^8.52.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "snyk": "^1.1245.0",
    "husky": "^8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "main.js",
      "!node_modules/**",
      "!tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 4,
        "functions": 20,
        "lines": 5,
        "statements": 6
      }
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "coverage",
          "outputName": "junit.xml"
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  }
}
